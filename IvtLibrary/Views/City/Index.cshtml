@model IEnumerable<IvtLibrary.City>

@{
    ViewBag.Title = "Города";
}

<h2>Города</h2>

<p>
    @Html.ActionLink("Добавить новый город", "Create")
</p>
<table>
    <tr>
        <th>
            Название
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink("Редактирование", "Edit", new { id=item.id }) |
            @Html.ActionLink("Подробности", "Details", new { id=item.id }) |
            @Html.ActionLink("Удаление", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
