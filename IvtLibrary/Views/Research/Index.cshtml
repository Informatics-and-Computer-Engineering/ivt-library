@using IvtLibrary.Helpers
@model IEnumerable<IvtLibrary.Research>

@{
    ViewBag.Title = "Исследования";
}
<script type="text/javascript">

        $(document).ready(function () {
            $("table").dataTable({
                bJQueryUI: true,
                sPaginationType: "full_numbers",
                "aoColumns": [null, null, { "bSearchable": false }]
            });
        });
    </script>
<h2>Исследования</h2>

<p>
    @Html.ActionLink("Добавить новое", "Create")
</p>
<table>
    <thead>
    <tr>
        <th>Название</th>
        <th>Описание исследования</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.ActionLink("Редактирование", "Edit", new { id=item.id }) |
            @Html.ActionLink("Подробности", "Details", new { id=item.id }) |
            @Html.ActionLink("Удаление", "Delete", new { id=item.id })
        </td>
    </tr>
}
    </tbody>
</table>
