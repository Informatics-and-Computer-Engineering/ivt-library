@model IEnumerable<IvtLibrary.Conference>

@{
    ViewBag.Title = "Конференции";
}
<script type="text/javascript">

        $(document).ready(function () {
            $("table").dataTable({
                bJQueryUI: true,
                sPaginationType: "full_numbers",
                "aoColumns": [null, null, null, null, { "bSearchable": false }]
            });
        });
    </script>
<h2>Список конференций</h2>

<p>
    @Html.ActionLink("Создать новую", "Create")
</p>
<table>
    <thead>
    <tr>
        <th>Название</th>
        <th>Место проведения</th>
        <th>Полное название</th>
        <th>Масштаб</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.place)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.full_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Scale.name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.id }) |
            @Html.ActionLink("Подробное описание", "Details", new { id=item.id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.id })
        </td>
    </tr>
}
    </tbody>
</table>