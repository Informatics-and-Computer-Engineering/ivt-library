@model IvtLibrary.File

@{
    ViewBag.Title = "Файл";
}

<h2>ПОдробная информация</h2>

<fieldset>
    <legend>Файл</legend>

    <div class="display-label">Название</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.name)
    </div>

    <div class="display-label">Расширение</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.content_type)
    </div>

    <div class="display-label">Тип</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Type.name)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id=Model.id }) |
    @Html.ActionLink("Назад к списку", "Index")
</p>