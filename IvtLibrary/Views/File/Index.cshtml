@model IEnumerable<IvtLibrary.File>

@{
    ViewBag.Title = "Файлы";
}
<script type="text/javascript">

        $(document).ready(function () {
            $("table").dataTable({
                bJQueryUI: true,
                sPaginationType: "full_numbers",
                "aoColumns": [null, null, null, { "bSearchable": false }]
            });
        });
    </script>
<h2>Список файлов</h2>

<p>
    @Html.ActionLink("Создать новый", "Create")
</p>
<table>
    <thead>
    <tr>
        <th>Название</th>
        <th>Тип</th>
        <th>Версия файла</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.version)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.id }) |
            @Html.ActionLink("Подробное описание", "Details", new { id=item.id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.id }) |
            @Html.ActionLink("Скачать файл", "Download", new { id = item.id })
        </td>

    </tr>
}
    </tbody>
</table>