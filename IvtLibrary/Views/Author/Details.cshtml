@model IvtLibrary.Author

@{
    ViewBag.Title = "Автор";
}

<h2>Подробное описание</h2>

<fieldset>
    <legend>Автор</legend>

    <div class="display-label">Имя</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.first_name)
    </div>

    <div class="display-label">Отчество</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.middle_name)
    </div>

    <div class="display-label">Фамилия</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.last_name)
    </div>
    <br/>
    <table>
        <thead>
        <tr>
            <th>Направления исследований</th><th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Theme) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
            </tr>
        }
        </tbody>
    </table>
</fieldset>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id=Model.id }) |
    @Html.ActionLink("Назад к списку", "Index")
</p>
